<!-- views/profile.ejs -->
<!doctype html>
<html>
  <head><% include partials/template/head.ejs %></head>
<body class="profile-page" style="background-image: linear-gradient(to bottom, white 0%, grey 100%)">
<% include partials/template/header.ejs %>


    <div class="page-header-profile" data-parallax="active" ></div>

    <div class="col-md-11 main main-raised">
        <div class="profile-content">
            <div class="col-md-1"></div>
            <div class="col-md-7 container" style="margin-left: -10px">
             
                    <div class="col-xs-9 col-xs-offset-2">
                       <div class="profile">
                           
                                <img src="/img/profile_pics/<%= user.avatarName %> " alt="Circle Image" class="img-responsive img-raised img-rounded">
                         
                            <div class="work">
                            <h3><%= user.firstName %><br>
                                <i class="fa fa-star profile-star"></i>
                                            <i class="fa fa-star profile-star"></i>
                                            <i class="fa fa-star profile-star"></i>
                                            <i class="fa fa-star profile-star"></i>
                                            <i class="fa fa-star profile-star"></i>
                                </h3>   
                                <h6><%= user.subjectName %> Teacher  in <%= user.city %></h6>
                                <a href="#pablo" class="btn btn-just-icon btn-simple btn-success"><i alt="Identity has been verified" class="fa fa-check"></i></a>
                                <a href="#pablo" class="btn btn-just-icon btn-simple btn-primary"><i class="fa fa-mortar-board"></i></a>
                            </div>
                        </div>
                    </div>

            <hr style="clear:both;">
                        <div class="content">
                    <h4>About <%= user.firstName %></h4>
                    <p><%- user.biography %></p>
                </div>

<hr>
                        <div class="content">
                                <h4>Stats</h4>
                                <ul class="list-unstyled">
                                    <li><b>160</b> Lessons Completed</li>
                                    <li><b>32</b> Happy Customers</li>
                                    <li><b>120</b> Bookezi Hours of Teaching</li>
                                    <li><b>26</b> Times Favourited by Students</li>
                                </ul>
                        </div>

<hr>

                        <div class="content">
                                <div>
                                <h4>About my Sessions</h4>
                                <p class="description"><%- user.lessonDescription %></p>
                                </div>
                        </div>
                    <hr>
                                
                                <h4>Media</h4>
<div class="card card-raised card-carousel">
                            <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                                <div class="carousel slide" data-ride="carousel">

                                    <!-- Indicators -->
                                    <ol class="carousel-indicators">
                                        <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                                        <li data-target="#carousel-example-generic" data-slide-to="1" class=""></li>
                                        <li data-target="#carousel-example-generic" data-slide-to="2" class=""></li>
                                    </ol>

                                    <!-- Wrapper for slides -->
                                    <div class="carousel-inner">
                                        <div class="item active">
                                            <img src="./img/examples/bg2.jpg" alt="Awesome Image">
                                            <div class="carousel-caption">
                                                <h4><i class="material-icons">location_on</i> Singing Lesson, At Students Home</h4>
                                            </div>
                                        </div>
                                        <div class="item">
                                            <img src="./img/examples/bg3.jpg" alt="Awesome Image">
                                            <div class="carousel-caption">
                                                <h4><i class="material-icons">location_on</i> Guitar Lesson, At Students Home</h4>
                                            </div>
                                        </div>
                                        <div class="item">
                                            <img src="./img/examples/bg.jpg" alt="Awesome Image">
                                            <div class="carousel-caption">
                                                <h4><i class="material-icons">location_on</i> Guitar Lesson, Dublin Music School</h4>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Controls -->
                                    <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                                        <i class="material-icons">keyboard_arrow_left</i>
                                    </a>
                                    <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                                        <i class="material-icons">keyboard_arrow_right</i>
                                    </a>
                                </div>
                            </div>
                        </div> <!-- end carousel -->
<div class="media-area">

                                <hr>
                                    <h4>Reviews</h4>
                                    <div class="media">
                                        <a class="pull-left" href="#pablo">
                                            <div class="avatar">
                                                <img class="media-object" src="./img/faces/face-6.jpg" alt="...">
                                            </div>
                                        </a>
                                        <div class="media-body">
                                            <h4 class="media-heading">Tina Andrew 
                                            <i class="fa fa-star profile-star"></i>
                                            <i class="fa fa-star profile-star"></i>
                                            <i class="fa fa-star profile-star"></i>
                                            <i class="fa fa-star profile-star"></i>
                                            <i class="fa fa-star profile-star"></i>
                                            <small>· 7 minutes ago</small></h4>
                                            <h6 class="text-muted"></h6>

                                            <p>Every week at my lessons is a new and positive experience. I appreciate my teacher's expertise greatly and feel lucky for the opportunity to continue learning from him.</p> <p>He is very professional and has a friendly, welcoming environment</p>

                                            <div class="media-footer">
                                            <hr>
                                            </div>
                                        </div>
                                    </div><!-- end review -->

                                    <div class="media">
                                        <a class="pull-left" href="#pablo">
                                            <div class="avatar">
                                                <img class="media-object" src="./img/faces/face-7.jpg" alt="...">
                                            </div>
                                        </a>
                                        <div class="media-body">
                                            <h4 class="media-heading">Tina Andrew 
                                            <i class="fa fa-star profile-star"></i>
                                            <i class="fa fa-star profile-star"></i>
                                            <i class="fa fa-star profile-star"></i>
                                            <i class="fa fa-star profile-star"></i>
                                            <i class="fa fa-star profile-star"></i>
                                            <small>· 7 minutes ago</small></h4>
                                            <h6 class="text-muted"></h6>

                                            <p>My daughter has attended for introductory guitar classes for almost two years and really enjoys it. Her teacher is great, very calm, encouraging and patient, and he doesn't talk down to them. </p><p>Every week I see progress and her personal pride in playing a little more accurately and fluidly each time. The atmosphere in the building from all staff is one of professionalism, kindness and welcome.</p>

                                            <div class="media-footer">
                                            <hr>
                                            </div>


                                        </div>
                                    </div><!-- end review -->


                                </div>

            </div><!-- end container profile -->

 

            <div class="col-md-3 container-booking">
                
                    <div class="card booking-card">
                        <div class="content">
                        <form action="/booking" method="POST">
                       <div class="input-group">
                            <h5 class="profile-widget-titles"><i class="fa fa-calendar btn btn-simple btn-just-icon btn-primary profile-widget-icons"></i> Availability</h5>
                            <div class="avail-box-dow dowmon"><p data-target="dow1">Mon </p></div>
                            <div class="avail-box-dow dowtue"><p data-target="dow2">Tues </p></div>
                            <div class="avail-box-dow dowwed"><p data-target="dow3">Wed </p></div>
                            <div class="avail-box-dow dowthu"><p data-target="dow4">Thur </p></div>
                            <div class="avail-box-dow dowfri"><p data-target="dow5">Fri </p></div>
                            <div class="avail-box-dow dowsat"><p data-target="dow6">Sat </p></div>
                            <div class="avail-box-dow dowsun"><p data-target="dow7">Sun </p></div>
                            <div class="profile-widget-times">
                                <div id="dow1"><% if (mon == '') { %><p>No availability on Mondays</p><% } else{ %><p><%- mon %></p><% } %></div>
                                <div id="dow2"><% if (tue == '') { %><p>No availability on Tuesdays</p><% } else{ %><p><%- tue %></p><% } %></div>
                                <div id="dow3"><% if (wed == '') { %><p>No availability on Wednesdays</p><% } else{ %><p><%- wed %></p><% } %></div>
                                <div id="dow4"><% if (thu == '') { %><p>No availability on Thursdays</p><% } else{ %><p><%- thu %></p><% } %></div>
                                <div id="dow5"><% if (fri == '') { %><p>No availability on Fridays</p><% } else{ %><p><%- fri %></p><% } %></div>
                                <div id="dow6"><% if (sat == '') { %><p>No availability on Satdays</p><% } else{ %><p><%- sat %></p><% } %></div>
                                <div id="dow7"><% if (sun == '') { %><p>No availability on Sundays</p><% } else{ %><p><%- sun %></p><% } %></div>
                            </div>
                            <hr>
                            
                            <h5 class="profile-widget-titles"><i class="fa fa-globe btn btn-simple btn-just-icon btn-success profile-widget-icons"></i> Lesson Location</h5>
                            
                            <div class="radio">

                                <label><input type="radio" name="locationRadios" value="0">At Teachers Home</label>
                              </div> 
                              <div class="radio">
                                <label><input type="radio" name="locationRadios" value="1">At Students Home</label>
                            </div>
                            <div class="radio">
                                <label><input type="radio" name="locationRadios" value="2">At Other Location</label>
                            </div>

                                <input type="hidden" name="userId" value="<%= user._id %>">
                            <hr>
                            <h5 class="profile-widget-titles"><i class="fa fa-euro btn btn-simple btn-just-icon btn-warning profile-widget-icons"></i> Price<br>from <b>€35</b> per hour</h5>
                                        
                                        

                                        <div class="footer text-center">
                                        <input type="submit" value="Book Lesson" class="btn btn-round btn-primary"></a>
                                          </form>
                                        </div>
                                    </div>
                                </div>
                                </div>


            </div><!-- end container profile -->
            <div class="col-md-1"></div>







        </div>
        <div class="col-md-2"></div>
    </div>


<div class="profile-footer">
<% include partials/template/footer.ejs %>
</div>
<% include partials/template/jsdefaults.ejs %>    
</body>
</html>