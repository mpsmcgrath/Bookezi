  
    <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %> 

 <body class="signup-page">
    <div class="page-header header-filter" filter-color="ffc107" style="background-image: url('img/blue_ocean.jpg'); background-size: cover; background-position: top center;">
        <div class="container">
           

            <div class="row"> 
                <div class="col-md-10 col-md-offset-1"> <!--whole form-card position and size -->
                   
<!-- ******************BEGIN FORM ********************* -->
                   <form class="form" action="/createprofile" method="post" accept-charset="UTF-8" enctype="multipart/form-data">
                        <div class="card card-signup">



        <div class="step">
 <!-- START OF PAGE 1 OF FORM -->
                                    <fieldset id="page1">
                                    <div class="vspacer50"></div>
                                    <h2 class="card-title text-center">Tell Us About Yourself</h2>
                                    <div class="vspacer50"></div>
                       

                    <div class="createprofile-row"> <!-- Start indvidual FORM ROW: First and Last Name -->
                            <div class="col-md-5 col-md-offset-1"><!-- left side of form -->
                                    <div class="description">
                                        <h4 class="info-title">What is your name?</h4>
                                        <p class="description">This needs to be your real name as appears on your ID documents, saftey of users is paramount - in order to 
                                        become a verified instructor your profile needs to be accurate</p>
                                    </div>
                        
                            </div>

                         <div class="col-md-5"><!-- right side of form -->
                                <div class="form-group label-floating">
                                <label class="control-label">Miss/Ms/Mr</label>
                                <input type="text" class="form-control" name="title">
                            </div>
                            <div class="form-group label-floating">
                                <label class="control-label">First name</label>
                                <input type="text" class="form-control" name="firstName">
                            </div>
                            <div class="form-group label-floating">
                                <label class="control-label">Last name</label>
                                <input type="text" class="form-control" name="lastName">
                            </div>
                        </div> <!-- End of right column div -->
                    </div> <!-- End of form row -->


                    <div class="createprofile-row"> <!-- Start indvidual FORM ROW: First and Last Name -->
                            <div class="col-md-5 col-md-offset-1"><!-- left side of form -->
                                    <div class="description">
                                        <h4 class="info-title">What is your address?</h4>
                                        <p class="description">Your current address, this should match the address you choose as you 'home' address for giving sessions at home (if applicable)</p>
                                    </div>
                        
                            </div>

                         <div class="col-md-5"><!-- right side of form -->
                            <div class="form-group label-floating">
                                <label class="control-label">Address line 1</label>
                                <input type="text" class="form-control" name="address1">
                            </div>
                            <div class="form-group label-floating">
                                <label class="control-label">Address line 2</label>
                                <input type="text" class="form-control" name="address2">
                            </div>
                            <div class="form-group label-floating">
                                <label class="control-label">City</label>
                                <input type="text" class="form-control" name="city">
                            </div>
                            <div class="form-group label-floating">
                                <label class="control-label">County</label>
                                <input type="text" class="form-control" name="county">
                            </div>
                                <div class="form-group label-floating">
                                <label class="control-label">Postcode</label>
                                <input type="text" class="form-control" name="postcode">
                            </div>
                           <div class="vspacer50"></div>

                        </div> <!-- End of right column div -->
                    </div><!-- End of form row -->


                    <div class="createprofile-row"> <!-- Start indvidual FORM ROW: D.O.B. -->
                            <div class="col-md-5 col-md-offset-1"><!-- left side of form -->
                                    <div class="description">
                                        <h4 class="info-title">What is your date of birth?</h4>
                                        <p class="description">Currently we can only accept instructors if you are 18 or over</p>
                                    </div>
                        
                            </div>

                         <div class="col-md-5"><!-- right side of form -->
                            <div class="form-group label-static">
                                <label class="control-label">Date of Birth Datepicker</label>
                                <input type="text" class="datepicker form-control" value="01/01/1990" name="dob"/>
                            </div><div class="vspacer50"></div><div class="vspacer50"></div>
                            
                        </div> <!-- End of right column div -->
                    </div><!-- End of form row -->


                    <div class="createprofile-row"> <!-- Start indvidual FORM ROW: Upload Profiler -->
                            <div class="col-md-5 col-md-offset-1"><!-- left side of form -->
                                    <div class="description">
                                        <h4 class="info-title">Upload a profile picture</h4>
                                        <p class="description">Please upload a headshot...try not to look scary - you could even try smiling!</p>
                                    </div>
                        
                            </div>

                         <div class="col-md-5"><!-- right side of form -->
    <!--                file uploader -->
                <div id="file-uploader" class="col-md-10 col-md-offset-1 col-sm-8 col-sm-offset-1">
                    <div class="row">
                        <div class="col-md-10 col-sm-8">
                            <div class="fileinput fileinput-new text-center" data-provides="fileinput">
                                <div class="fileinput-new thumbnail img-raised">
                                    <img src="img/image_placeholder.jpg" alt="...">
                                </div>
                                <div class="fileinput-preview fileinput-exists thumbnail img-raised"></div>
                                <div>
                                    <span class="btn btn-raised btn-round btn-default btn-file">
                                        <span class="fileinput-new">Select image</span>
                                        <span class="fileinput-exists">Change</span>
                                        <input type="file" name="image" />
                                    </span>
                                    <a href="#" class="btn btn-danger btn-round fileinput-exists" data-dismiss="fileinput"><i class="fa fa-times"></i> Remove</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                            
                        </div> <!-- End of right column div -->
                    </div><!-- End of form row -->
                        </fieldset>
        </div>
        <div class="step">
            <!-- START OF PAGE 2 OF FORM -->
                                                <fieldset id="page2">
                    <h2 class="card-title text-center">Create Skill Profile</h2>
                      <div class="vspacer50"></div>
                        <div class="createprofile-row"> <!-- Indvidual FORM ROW: Teaching Subject -->
                            <div class="col-md-5 col-md-offset-1"><!-- left side of form -->
                                    <div class="description">
                                        <h4 class="info-title">Choose Skill Category</h4>
                                        <p class="description">Tell us the type of skill you wish to take bookings for</p>
                                        <p> To suggest another category, please click here.</p>
                                    </div>
                        
                            </div>

                         <div class="col-md-5"><!-- right side of form -->
                                <div class="input-group">
                                        <select name="subjectName" class="select btn btn-raised btn-primary btn-round">
                                            <option disabled selected> Choose subject</option>
                                            <option value="maths">Maths</option>
                                            <option value="piano">Piano</option>
                                            <option value="yoga">Yoga</option>
                                            <option value="tennis">Tennis</option>
                                            <option value="acting">Acting</option>
                                        </select>
                            
                                </div> <!-- End of right column div -->
                            </div>
                        </div>

                        <div class="createprofile-row"> <!-- Indvidual FORM ROW: Session lengths -->
                            <div class="col-md-5 col-md-offset-1"><!-- left side of form -->
                                    <div class="description">
                                        <h4 class="info-title">Session Lengths</h4>
                                        <p class="description">How long will your sessions last? 30 60, 90, 120mins? Please contact us if you have 
                                        session lengths that are not covered by these options</p>
                                    </div>
                        
                            </div>

                         <div class="col-md-5"><!-- right side of form -->
                            <div class="input-group">
                                <div class="checkbox">
                                    <label>
                                    <input type="checkbox" name="canSessionLength30">
                                    30 minute sessions
                                </label>
                            </div>

                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" name="canSessionLength60">
                                    60 minute sessions
                                </label>
                            </div>

                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" name="canSessionLength90">
                                    90 minute sessions
                                </label>
                            </div>

                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" name="canSessionLength120">
                                    120 minute sessions
                                </label>
                                <div class="vspacer20"></div>
                            </div>
                            
                                </div> <!-- End of input group div -->
                            </div>
                        </div> <!-- End Indvidual FORM ROW: Session lengths -->



                        <div class="createprofile-row"> <!-- Indvidual FORM ROW: Session locations -->
                            <div class="col-md-5 col-md-offset-1"><!-- left side of form -->
                                    <div class="description">
                                        <h4 class="info-title">Session Locations</h4>
                                        <p class="description">Where will you give your skill transfer sessions?  In your own home, at the customers home or if you have a neutral venue such a park, a gym, a university classroom or similar.</p>
                                    </div>
                        
                            </div>

                         <div class="col-md-5"><!-- right side of form -->
                            <div class="input-group">
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" name="canTeachAtHome">
                                        At your home
                                    </label>
                                </div>

                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" name="canTeachAtCustHome">
                                        At the customers home
                                    </label>
                                </div>

                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" name="canTeachAtCustom">
                                        At another location
                                    </label>
                                </div>
                            </div> <!-- End of input group div -->
                        </div>
                    </div> <!-- End Indvidual FORM ROW: Session locations -->
                        </fieldset>
        </div>

            <!-- START OF PAGE 3 OF FORM -->

        <div class="step">
                            <fieldset id="page3"> 
                                <div class="col-md-10 col-md-offset-1">
                                    <div class="vspacer50"></div>
                                        <h2 class="card-title text-center">You and Your Sessions</h2>
                                    <div class="vspacer50"></div>
                                 </div>
                                 

                    <div class="createprofile-row"> <!-- Start indvidual FORM ROW: Tell us about you -->
                            <div class="col-md-5 col-md-offset-1"><!-- left side of form -->
                                    <div class="description">
                                        <h4 class="info-title">Tell us about yourself</h4>
                                        <p class="description">Please give us a short paragraph or two about yourself, what makes you tick, your personality and your background in the subject at hand. Feel free to be as creative (or boring!) as you like</p>
                                    </div>
                            </div>

                        <div class="col-md-5"><!-- right side of form -->
                            <div class="form-group label-floating">
                                <label class="control-label"> You can write your text here...</label>
                                <textarea name="biography" class="form-control" rows="10"></textarea>
                                    <div class="vspacer50"></div>
                            </div>        
                        </div> <!-- End of right column div -->
                    </div><!-- End of form row -->


                    <div class="createprofile-row"> <!-- Start indvidual FORM ROW: Tell us about your lessons -->
                            <div class="col-md-5 col-md-offset-1"><!-- left side of form -->
                                    <div class="description">
                                        <h4 class="info-title">What can people expect from your lessons?</h4>
                                        <p class="description">Give us some detail on what to expect from your teaching sessions on this subject. Perhaps briefly outline lesson progression
                                        or what you expect from your student</p>
                                    </div>
                        
                            </div>

                         <div class="col-md-5"><!-- right side of form -->
                            <div class="form-group label-floating">
                                <label class="control-label"> You can write your text here...</label>
                                <textarea id="lessonDescription" name="lessonDescription" class="form-control" rows="10"></textarea>
                                <div class="vspacer50"></div>
                            </div>
                        </div> <!-- End of right column div -->
                    </div><!-- End of form row -->


                    </fieldset> 
        </div>


        <div class="step">
            <div class="col-md-10 col-md-offset-1">
                <h2 class="card-title text-center">So when suits you to teach?</h2>
                    <div id='calendar'></div>
            </div>
                                                <div class="col-md-10 col-md-offset-1" id="create_profile_buttons">
                                                <div class="vspacer20"></div>
                                                <p>Please select all the slots you are free to teach in, you can click or drag to select.</p> 
                                                <p>Click again to deselect. Once you're happy with your selections click create profile and we will take you to your snazzy new dashboard. </p>
                                                 <button id="testAPI" onclick="saveEvents()" class="btn btn-primary btn-raised btn-round ">Save Slots</button>
                                            <button type="submit" onclick="saveEvents()" class="btn btn-primary btn-raised btn-round ">Create Profile</button>
                                            </div>
                                         
        </div>


                                            <div class="col-md-10 col-md-offset-1" id="create_profile_buttons">
                                            <div class="vspacer20"></div>
                                            <button type="button" class="action back btn btn-primary btn-raised btn-round">Back</button>
                                            <button type="button" class="action next btn btn-primary btn-raised btn-round">Next</button>
                                            <div class="vspacer50"></div>
                                            </div>

                             

<div class="col-md-10 col-md-offset-1">
        <div class="progress">
          <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
        </div>

                        </div> <!-- card card-signup -->
                    </form>
<!-- ******************END FORM ********************* -->

                  </div> <!-- end whole form card position and size col-md-10 col-md-offset-1 -->
            </div><!-- row -->       
        </div><!-- container -->
    </div><!-- page-header header-filter -->
</body>